    <div style="margin-left=25% ;padding:15%">
    <TABLE BORDER ="3" ALIGN="CENTER" WIDTH="50%">
      <TR>
        <TD>DEVICE</TD>
        <TD>LAST ACTIVE ON</TD>
      </TR>
      <TR><% if(A){ %>
          <TD> LIGHT ALPHA</TD>
          <TD><%=A %></TD>
            <% } %>
      </TR>
